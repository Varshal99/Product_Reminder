<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="product_repurchase_reminder" instance="Product\Reminder\Cron\SendReminderEmail" method="execute">
            <schedule>0 2 * * *</schedule>
        </job>
        <job name="product_reminder_clean_log" instance="Product\Reminder\Cron\CleanEmailLog" method="execute">
            <schedule>0 3 * * 0</schedule>
        </job>
    </group>
</config>
