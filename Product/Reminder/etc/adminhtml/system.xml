<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="product_reminder_tab" translate="label" sortOrder="90">
            <label>Product Reminder</label>
        </tab>

        <section id="product_reminder" translate="label" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Product Reminder</label>
            <tab>product_reminder_tab</tab>
            <resource>Product_Reminder::config</resource>

            <group id="settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Reminder Settings</label>

                <field id="enable" translate="label"
                       type="select"
                       sortOrder="5"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Enable Product Reminder</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="stock_threshold" translate="label comment"
                       type="text"
                       sortOrder="10"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Stock Threshold for Reminder</label>
                    <comment>Notify customers when product stock is less than or equal to this threshold.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
